<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="70"
        android:orientation="vertical" >

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100" />

        <TextView
            android:id="@+id/selection_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey05" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="30"
        android:orientation="vertical" >

        <ScrollView
            android:id="@+id/level_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50" >

            <!--
            Using wrap_content for the height of children in the scrollview
            allows the child views to be as big as they need to be and the
            scrollview takes care of the rest
            -->

            <LinearLayout
                android:id="@+id/level_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/trace_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onTraceButtonClick"
                    android:text="@string/trace_text_name" />

                <Button
                    android:id="@+id/debug_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onDebugButtonClick"
                    android:text="@string/debug_text_name" />

                <Button
                    android:id="@+id/info_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onInfoButtonClick"
                    android:text="@string/info_text_name" />

                <Button
                    android:id="@+id/warn_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onWarnButtonClick"
                    android:text="@string/warn_text_name" />

                <Button
                    android:id="@+id/error_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onErrorButtonClick"
                    android:text="@string/error_text_name" />

                <Button
                    android:id="@+id/off_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onOffButtonClick"
                    android:text="@string/off_text_name" />

                <Button
                    android:id="@+id/clear_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClearButtonClick"
                    android:text="@string/clear_text_name" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:id="@+id/appender_scrollview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="50" >

            <LinearLayout
                android:id="@+id/appender_linearlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- We will add checkboxes here programmatically -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>